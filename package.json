{
  "name": "@cao-mei-you-ren/torrent-file",
  "version": "1.0.0",
  "description": "Parse a torrent file (name, hash, files, pieces)",
  "author": "CaoMeiYouRen",
  "contributors": [
    "Scott Cooper <scttcper@gmail.com>",
    "CaoMeiYouRen"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/torrent-file.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "keywords": [],
  "scripts": {
    "lint": "pnpm run '/^(lint:biome|lint:eslint)$/'",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint --ext .ts,.tsx .",
    "lint:fix": "pnpm run '/^(lint:biome|lint:eslint):fix$/'",
    "lint:eslint:fix": "eslint --ext .ts,.tsx . --fix",
    "lint:biome:fix": "biome check . --apply",
    "prepare": "npm run build",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=default --reporter=junit --outputFile=./junit.xml"
  },
  "dependencies": {
    "@cao-mei-you-ren/crypto-hash": "^3.0.0",
    "uint8array-extras": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.0",
    "@ctrl/eslint-config-biome": "2.1.1",
    "@sindresorhus/tsconfig": "5.0.0",
    "@types/node": "20.11.25",
    "@vitest/coverage-v8": "1.3.1",
    "parse-torrent": "11.0.16",
    "tsup": "^8.1.0",
    "typescript": "5.4.2",
    "vitest": "1.3.1"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
